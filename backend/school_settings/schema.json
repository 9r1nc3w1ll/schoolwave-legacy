{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "school_id": {
        "type": "string"
      },
      "storage_options": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "default": {
              "type": "boolean"
            },
            "driver": {
              "type": "string",
              "enum": ["s3", "local"]
            },
            "base_path": {
              "type": "string"
            },
            "token": {
              "type": "string"
            }
          },
          "required": ["default", "driver", "base_path"],
          "additionalProperties": false
        }
      }
    },
    "required": ["school_id", "storage_options"],
    "additionalProperties": false
  }
  